@model Site.Models.Kullanici
@{
    ViewData["Title"] = "Profilim";
}

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet" />

<style>
    html, body {
        margin: 0;
        padding: 0;
        font-family: 'Montserrat', sans-serif;
        background: #f9fbfc;
        color: #333;
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
    }

    /* NAVBAR */
    nav {
        width: 100%;
        background-color: #25D366;
        padding: 8px 0; /* daha ince */
        box-shadow: 0 4px 12px rgba(37, 211, 102, 0.25);
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

    nav h1 {
        color: #e0f2e9;
        font-weight: 600;
        font-size: 24px;
        margin: 0;
    }

    /* ANA CONTAINER */
    .main-container {
        display: flex;
        gap: 30px;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 10px;
        justify-content: center;
        align-items: flex-start;
    }

    /* PROFIL */
    .profil-container {
        flex: 1;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        padding: 25px;
        text-align: center;
        height: fit-content;
    }

    .profil-container h2 {
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .profil-container p {
        font-size: 16px;
        margin: 10px 0;
        font-weight: 500;
        color: #555;
    }

    .profil-container a {
        display: inline-block;
        margin-top: 25px;
        background-color: #25D366;
        color: white;
        padding: 10px 24px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.3s, box-shadow 0.3s;
        box-shadow: 0 6px 12px rgba(37, 211, 102, 0.35);
    }

    .profil-container a:hover {
        background-color: #1eb954;
        box-shadow: 0 8px 16px rgba(30, 185, 84, 0.5);
    }

    /* TODO LIST */
    .content {
        flex: 2;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        padding: 30px;
        display: flex;
        flex-direction: column;
    }

    .content h2 {
        text-align: center;
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 25px;
    }

    #todoForm {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 25px;
    }

    #todoForm input {
        flex-grow: 1;
        padding: 10px 18px;
        border-radius: 30px;
        border: 2px solid #ccc;
        font-size: 16px;
    }

    #todoForm input:focus {
        border-color: #25D366;
        outline: none;
    }

    #todoForm button {
        background: #25D366;
        color: white;
        padding: 10px 24px;
        border: none;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s, box-shadow 0.3s;
    }

    #todoForm button:hover {
        background: #1eb954;
    }

    ul#todoList {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    ul#todoList li {
        background: #f7f9fa;
        margin-bottom: 12px;
        padding: 12px 18px;
        border-radius: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 16px;
    }

    ul#todoList li button {
        background: none;
        border: none;
        color: #e74c3c;
        font-size: 22px;
        cursor: pointer;
    }

    footer {
        width: 100%;
        text-align: center;
        font-size: 14px;
        padding: 10px 0;
        color: #777;
        background: #f0f0f0;
        border-top: 1px solid #ccc;
        margin-top: 30px;
    }

</style>

<!-- Navbar -->
<nav role="banner" aria-label="Ana Navigasyon">
    <h1>Hoşgeldin, @Model.Isim!</h1>
</nav>

<!-- Ana içerik -->
<div class="main-container" role="main">
    <aside class="profil-container" aria-label="Kullanıcı Profili">
        <h2>@Model.Isim @Model.Soyisim'in Profili</h2>
        <p><strong>Yaş:</strong> @Model.Yas</p>
        <p><strong>E-posta:</strong> @Model.Email</p>
        <a asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
    </aside>

    <section class="content" aria-label="Yapılacaklar Listesi">
        <h2>Yapılacaklar Listesi</h2>
        <form id="todoForm">
            <input type="text" id="todoInput" placeholder="Yeni yapılacak..." required />
            <button type="submit">Ekle</button>
        </form>
        <ul id="todoList"></ul>
    </section>
</div>



<script>
    const form = document.getElementById('todoForm');
    const input = document.getElementById('todoInput');
    const list = document.getElementById('todoList');

    form.addEventListener('submit', function (e) {
        e.preventDefault();
        const text = input.value.trim();
        if (text === '') return;

        const li = document.createElement('li');
        li.textContent = text;

        const btn = document.createElement('button');
        btn.textContent = '×';
        btn.title = "Sil";
        btn.addEventListener('click', () => {
            list.removeChild(li);
        });

        li.appendChild(btn);
        list.appendChild(li);
        input.value = '';
        input.focus();
    });
</script>
