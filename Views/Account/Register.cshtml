@{
    ViewData["Title"] = "Kayıt Ol";
}

@model Site.Models.Kullanici

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet" />

<!-- Sayfaya özel CSS -->
<link rel="stylesheet" href="~/css/register.css" />

<div class="register-container">
    <h2>Kayıt Ol</h2>

    <form asp-action="Register" method="post" class="register-form">
        <div class="form-group">
            <label asp-for="Isim"></label>
            <input asp-for="Isim" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Soyisim"></label>
            <input asp-for="Soyisim" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Yas"></label>
            <input asp-for="Yas" class="form-control" type="number" />
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" type="email" />
        </div>

        <div class="form-group">
            <label asp-for="Sifre"></label>
            <input asp-for="Sifre" class="form-control" type="password" />
        </div>

        <button type="submit" class="btn-register">Kayıt Ol</button>
    </form>

    <p class="alt-mesaj">
        Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a>
    </p>
</div>
