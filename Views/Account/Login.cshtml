@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9; /* Açık gri arka plan */
        color: #333333; /* Koyu gri yazı */
        padding: 20px;
    }

    h2 {
        color: #2c3e50; /* Koyu mavi-gri başlık */
        margin-bottom: 20px;
    }

    form {
        max-width: 400px;
        background-color: #ffffff; /* Beyaz form arka planı */
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(44, 62, 80, 0.1); /* Hafif gölge */
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #34495e; /* Orta koyulukta mavi-gri */
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px 10px;
        margin-bottom: 15px;
        border: 1px solid #bdc3c7; /* Açık gri sınır */
        border-radius: 4px;
        font-size: 15px;
        transition: border-color 0.3s ease;
    }

    input[type="email"]:focus,
    input[type="password"]:focus {
        border-color: #2980b9; /* Canlı mavi odak rengi */
        outline: none;
    }

    button {
        background-color: #2980b9; /* Mavi buton */
        color: white;
        font-weight: 700;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background-color: #1f6391; /* Daha koyu mavi hover efekti */
    }

    p {
        font-size: 14px;
        color: #7f8c8d; /* Gri metin */
    }

    a {
        color: #2980b9;
        text-decoration: none;
        font-weight: 600;
    }

    a:hover {
        text-decoration: underline;
    }
</style>

<h2>Giriş Yap</h2>

<form asp-action="Login" method="post">
    <div>
        <label for="Email">E-posta:</label>
        <input type="email" id="Email" name="Email" required />
    </div>

    <div>
        <label for="Sifre">Şifre:</label>
        <input type="password" id="Sifre" name="Sifre" required />
    </div>

    <button type="submit">Giriş Yap</button>
</form>

<p>
    Henüz hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a>
</p>
